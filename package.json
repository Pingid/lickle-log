{
  "name": "@lickle/log",
  "version": "0.0.0-alpha.1",
  "description": "A tiny structured logging utility that includes, customizable transports, metadata.",
  "author": "Dan Beaven <dm.beaven@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pingid/log"
  },
  "license": "MIT",
  "type": "module",
  "main": "lib/cjs/index.js",
  "typings": "lib/ts/index.d.ts",
  "module": "lib/esm/index.mjs",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/ts/index.d.ts",
      "require": "./lib/cjs/index.js",
      "module": "./lib/esm/index.js"
    }
  },
  "files": [
    "lib",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*",
    "tsconfig.json"
  ],
  "keywords": [
    "logging",
    "logger",
    "debug"
  ],
  "scripts": {
    "build": "npm run esm && npm run cjs",
    "esm": "tsc --module nodenext --outDir lib/esm",
    "cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "vitest"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all"
  }
}
